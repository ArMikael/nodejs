<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>User Profile</title>

    <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
    {{> nav }}

    <h1>
        Hello, {{ name }}
    </h1>
    <div>As we know you are, {{ userData.age }} years old and your occupation is {{ userData.job }}</div>

    <h2>Condition</h2>
    <section>
        {{# if condition }}
            <div>
                True section
            </div>
        {{ else }}
            <div>
                False section
            </div>
        {{/if}}
    </section>

    <h2>Array - For Each</h2>
    <section>
        {{# each itemsList }}
            <div>{{ this }}</div>
        {{/each}}
    </section>
</body>
</html>

