<h1>
    Hello, {{ name }}
</h1>

<h2>Condition</h2>
<section>
    {{# if condition }}
        <div>
            True section
        </div>
    {{ else }}
        <div>
            False section
        </div>
    {{/if}}
</section>

<h2>Array - For Each</h2>
<section>
    {{# each itemsList }}
        <div>{{ this }}</div>
    {{/each}}
</section>